<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@android:style/Theme">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="editTextEnameStyle">@style/MyEditTextEname</item>
    </style>
    <style name="MyToggleMove" parent="android:Widget.Button.Toggle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/btn_move</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:checked">true</item>
    </style>
    <style name="MyEditTextEname" parent="android:Widget.EditText">
        <item name="android:digits">0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ_</item>
        <item name="android:maxLength">8</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions|textVisiblePassword</item>
    </style>

    <attr name="editTextEnameStyle" format="integer|reference" />
</resources>
